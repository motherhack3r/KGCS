@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix ex: <https://example.org/sec/core#> .
@prefix capec: <https://example.org/sec/capec#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

# CAPEC shapes: AttackPattern identifier (accepts ex:capecId or capec:capecId)
ex:CAPECAttackPatternShape a sh:NodeShape ;
  sh:targetClass ex:AttackPattern ;
  sh:targetClass capec:AttackPattern ;
  sh:or (
    [ a sh:PropertyShape ; sh:path ex:capecId ; sh:datatype xsd:string ; sh:minCount 1 ]
    [ a sh:PropertyShape ; sh:path capec:capecId ; sh:datatype xsd:string ; sh:minCount 1 ]
  ) ;
  sh:message "AttackPattern must include a capecId (either ex:capecId or capec:capecId)." .
