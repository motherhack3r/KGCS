# Neo4j Configuration (Template)
# Copy this file to .env and fill in your actual credentials
# .env is in .gitignore and should never be committed

# Neo4j Database
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your-secure-password-here
NEO4J_DATABASE=neo4j

# Optional: Authentication
NEO4J_AUTH_ENABLED=true
NEO4J_ENCRYPTED=false
NEO4J_TRUST=TRUST_ALL_CERTIFICATES

# ETL Configuration
ETL_BATCH_SIZE=1000
ETL_PARALLELISM=4
ETL_TIMEOUT_SECONDS=300

# Validation
VALIDATE_BEFORE_INGEST=true
SHACL_SHAPES_DIR=docs/ontology/shacl
ABORT_ON_VALIDATION_FAILURE=true

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/kgcs.log
